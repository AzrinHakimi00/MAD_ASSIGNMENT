<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e2e2e"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".HomePage.AlertFragment">


    <TextView
        android:id="@+id/Alert_Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/border"
        android:fontFamily="@font/inriasansbold"
        android:text="WEATHER ALERT"
        android:textAlignment="center"
        android:textColor="#FFFCFC"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/Weather"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="30dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/Alert_Time"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:text="Time"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#ECE8E8"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/Alert_Duration"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:text="Duration"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#F4ECEC"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/location"
        android:layout_width="323dp"
        android:layout_height="57dp"
        android:layout_margin="10dp"
        android:fontFamily="@font/mulishfont"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:autoSizeTextType="uniform" />

    <Button
        android:id="@+id/Alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="LIST ALERTS" />

    <TextView
        android:id="@+id/Message"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_margin="20dp"
        android:background="@drawable/curve_corner_10dp"
        android:backgroundTint="@color/color2"
        android:fontFamily="@font/inriasansbold"
        android:paddingLeft="30dp"
        android:paddingTop="20dp"
        android:paddingRight="30dp"
        android:paddingBottom="20dp"
        android:text="There's no alert"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/Advice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLS STAY AT HOME FOR THE MEANTIME"
        android:textColor="@color/white"
        android:textStyle="italic" />

</LinearLayout>