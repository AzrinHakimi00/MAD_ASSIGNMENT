<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/BGColor"
    android:gravity="center|top">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:srcCompat="@drawable/achievement" />

            <TextView
                android:id="@+id/TVAchievement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/source_code_pro_bold"
                android:text="Achievements"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TVDoCarbon"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_code_light"
                    android:text="Do carbon calculation at least \n10 times"
                    android:textAlignment="gravity"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:padding="10dp"/>

                <ProgressBar
                    android:id="@+id/PBCC10"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="241dp"
                    android:layout_height="13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.189" />
            </LinearLayout>



            <Button
                android:id="@+id/BtnNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CDDC39"
                android:text="Notify me!"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_code_light"
            android:text="&quot;Did you know that by calculating your carbon footprint, you're taking the first step toward a greener lifestyle? Keep it up!&quot;"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVDoCarbon2"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_code_light"
                    android:text="Do carbon calculation at least \n20 times"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:padding="10dp"
                    />

                <ProgressBar
                    android:id="@+id/PBCC20"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="241dp"
                    android:layout_height="13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.105"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.343" />

            </LinearLayout>



            <Button
                android:id="@+id/BtnNotify2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CDDC39"
                android:text="Notify me!"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_code_light"
            android:text="&quot;Fun fact - recycling just one aluminum can saves enough energy to power a TV for three hours. You're making a real impact as an Eco Warrior!"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:padding="10dp"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TVDoCarbon3"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_code_light"
                    android:text="Do carbon calculation at least \n30 times"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:padding="10dp"/>

                <ProgressBar
                    android:id="@+id/PBCC30"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="241dp"
                    android:layout_height="13dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.512" />

            </LinearLayout>



            <Button
                android:id="@+id/BtnNotify3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CDDC39"
                android:text="Notify me!" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_code_light"
            android:text="&quot;Fun fact - recycling just one aluminum can saves enough energy to power a TV for three hours. You're making a real impact as an Eco Warrior!"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVDoCarbon5"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_code_light"
                    android:text="Plant a tree 5 times"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"
                    android:padding="10dp"
                    />

                <ProgressBar
                    android:id="@+id/progressBarPlant"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="241dp"
                    android:layout_height="13dp" />
            </LinearLayout>



            <Button
                android:id="@+id/BtnNotify4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CDDC39"
                android:text="Notify me!"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_code_light"
            android:text="&quot;Trees are nature's superheroes! They absorb carbon dioxide and provide oxygen. As a Tree Hugger, you're contributing to a healthier planet.&quot;"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TVDoCarbon4"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fira_code_light"
                    android:text="Plant a tree 10 times"
                    android:textColor="#FFFFFF"
                    android:textStyle="italic"
                    android:padding="10dp"/>

                <ProgressBar
                    android:id="@+id/progressBarPlant10"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="241dp"
                    android:layout_height="13dp"
                    />
            </LinearLayout>



            <Button
                android:id="@+id/BtnNotify5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CDDC39"
                android:text="Notify me!"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_code_light"
            android:text="&quot;Amazing job! Each tree you plant helps combat climate change. Did you know a single tree can absorb as much as 48 pounds of carbon dioxide per year?&quot;"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"/>


        <Button
            android:id="@+id/BtnShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="72dp"
            android:backgroundTint="#D5F0C1"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Share!" />

    </LinearLayout>







</ScrollView>