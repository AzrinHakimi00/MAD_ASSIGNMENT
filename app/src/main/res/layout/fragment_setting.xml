<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".HomePage.SettingFragment">

    <!-- res/layout/fragment_settings.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ProfileView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#6CFF72"
            android:clickable="true"
            android:onClick="ProfileClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Profile"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- You can add an icon or additional information here if needed -->
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"></LinearLayout>

        <!-- Privacy Policy -->
        <LinearLayout
            android:id="@+id/privacyPolicyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#5EEDFF"
            android:clickable="true"
            android:onClick="onPrivacyPolicyClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Privacy Policy"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- You can add an icon or additional information here if needed -->
        </LinearLayout>

        <!-- Terms and Conditions -->
        <LinearLayout
            android:id="@+id/termsConditionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#5EEDFF"
            android:clickable="true"
            android:onClick="onTermsConditionsClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Terms and Conditions"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- You can add an icon or additional information here if needed -->
        </LinearLayout>

        <!-- About App -->
        <LinearLayout
            android:id="@+id/aboutAppLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#5EEDFF"
            android:clickable="true"
            android:onClick="onAboutAppClick"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="About App"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!-- You can add an icon or additional information here if needed -->
        </LinearLayout>


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/logoutBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logout"
            android:text="Logout"
            android:layout_margin="30dp"/>


    </LinearLayout>



</FrameLayout>
