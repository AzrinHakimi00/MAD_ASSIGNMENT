<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#808080"/> <!-- Change the color for the background as needed -->
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#1AFF00"/> <!-- Set your highlight neon color here -->
            </shape>
        </clip>
    </item>
</layer-list>
