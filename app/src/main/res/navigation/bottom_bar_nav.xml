<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_bar_nav"
    app:startDestination="@id/HomeDest">

    <fragment
        android:id="@+id/HomeDest"
        android:name="com.example.mad_assignment.HomePage.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/gotoquiz"
            app:destination="@id/quizFragment" />
    </fragment>
    <fragment
        android:id="@+id/SettingDest"
        android:name="com.example.mad_assignment.HomePage.SettingFragment"
        android:label="fragment_setting"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/ForumDest"
        android:name="com.example.mad_assignment.HomePage.ForumFragment"
        android:label="fragment_forum"
        tools:layout="@layout/fragment_forum" />
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.mad_assignment.AccountManagement.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <action
            android:id="@+id/quiztohome"
            app:destination="@id/HomeDest" />
    </fragment>
</navigation>